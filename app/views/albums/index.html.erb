<h1>My Albums</h1>

<% if user_signed_in? %>
  <% if @albums.empty? %>
    <div>
      <strong>No albums yet.</strong>
    </div>
    <%= link_to 'Create a new photo album', new_album_path, class: 'btn btn-primary' %>
  <% else %>
    <div class="row">
      <% @albums.each do |album| %>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <%= image_tag(album.photos.first ? album.photos.first.url : nil) %>
            <div class="caption">
              <h3><%= album.title %></h3>
              <p>
                <a href="#" class="btn btn-primary btn-sm" role="button">Button</a>
                <a href="#" class="btn btn-default btn-sm" role="button">Button</a>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>