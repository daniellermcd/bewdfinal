<h1>My Albums</h1>

<% if user_signed_in? %>
  <% if @albums.empty? %>
    <div>
      <strong>No albums yet.</strong>
    </div>
    <%= link_to 'Create a new photo album', new_album_path, class: 'btn btn-primary' %>
  <% else %>
    <div class="row">
      <% @albums.each do |album| %>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <%= image_tag(album.photos.first ? album.photos.first.url : 'placeholder.png') %>
            <div class="caption">
              <h3><%= album.title %></h3>
              <p>
                <%= link_to 'View', album_path(album), class: 'btn btn-info btn-sm' %>
                <%= link_to content_tag(:span, nil, class: 'glyphicon glyphicon-share-alt'), '#', class: 'btn btn-default btn-sm' %>
                <%= link_to content_tag(:span, nil, class: 'glyphicon glyphicon-pencil'), edit_album_path(album), class: 'btn btn-default btn-sm' %>
                <%= link_to content_tag(:span, nil, class: 'glyphicon glyphicon-remove'), '#', class: 'btn btn-default btn-sm' %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>