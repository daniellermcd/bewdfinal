<div class="row">
  <div class="jumbotron">
    <div class="row">
      <div class="col-md-8">
        <h1>Welcome to the Photo Booth!</h1>
        <%= link_to 'Create a new photo album', new_album_path, class: 'btn btn-primary btn-lg' %>
      </div>
      <div class="col-md-4">
        <%= image_tag('logo.png', class: 'img-responsive') %>
      </div>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <% if @albums.empty? %>
    You don't have any albums yet.
  <% else %>
    <div class="row">
      <% @albums.each do |album| %>
      <div class="panel panel-default col-md-3" style="height:300px; background-image:url(<%= album.photos.first.url %>)">
        <h2 class="panel panel-default-heading" style="padding:5px; text-align:center">
          <%= link_to "#{album.title} (#{album.photos.count})", album %>
        </h2>
      </div>
      <% end %>
    </div>
  <% end %>
<% end %>