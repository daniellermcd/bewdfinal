<div class="row">
  <div class="jumbotron">
    <div class="row">
      <div class="col-md-6">
        <h1>Welcome to the Photo Booth!</h1>
        <% if user_signed_in? %>
          <%= render 'albums/new_album' %>
        <% else %>
          <%= link_to 'Sign up for an account', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
          <%= link_to 'Log in to your account', new_user_session_path, class: 'btn btn-default btn-lg' %>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= image_tag('polaroids.png', class: 'img-responsive') %>
      </div>
    </div>
  </div>
</div>