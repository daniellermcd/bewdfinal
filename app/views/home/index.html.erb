<div class="row">
  <div class="jumbotron">
    <div class="row">
      <div class="col-md-6">
        <h1>Welcome to the Photo Booth!</h1>
        <% if user_signed_in? %>
          <%= render 'albums/album_form' %>
        <% else %>

          <!-- Nav tabs -->
          <ul class="nav nav-tabs">
            <li class="active"><a href="#signup" data-toggle="tab">Sign up</a></li>
            <li><a href="#login" data-toggle="tab">Log in</a></li>
          </ul>

          <!-- Tab panes -->
          <div class="tab-content">
            <div class="tab-pane fade in active" id="signup">
              <%= render 'signup' %>
            </div>
            <div class="tab-pane fade" id="login">
              <%= render 'login' %>
            </div>
          </div>

        <% end %>
      </div>
      <div class="col-md-6">
        <%= image_tag('polaroids.png', class: 'img-responsive') %>
      </div>
    </div>
  </div>
</div>