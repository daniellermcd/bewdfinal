<%= form_for('user', :url => user_session_path) do |f| %>
  <div class="form-group">
    <%= f.text_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  </div>

  <div class="form-group">
    <%= f.check_box :remember_me, class: 'checkbox' %>
    <%= f.label :remember_me, class: 'checkbox-label checkbox-home jumbotron-text' %>
  </div>

  <div class="form-group login-home">
    <%= f.submit 'Log in', class: 'btn btn-primary' %>
    <%= link_to 'Forgot your password?', new_password_path('user'), class: 'jumbotron-text' %>
  </div>
<% end %>