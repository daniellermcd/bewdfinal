<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form', class: 'well' }) do |f| %>
  <%= render 'layouts/error_messages', object: resource %>
  <legend>Sign up for an account</legend>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Sign up', class: 'btn btn-primary' %>
    <%= link_to 'Log in', new_user_session_path %>
  </div>
<% end %>