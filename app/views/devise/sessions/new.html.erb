<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form', class: 'well' }) do |f| %>
  <legend>Log in to your account</legend>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me, class: 'checkbox' %>
      <%= f.label :remember_me, class: 'checkbox-label' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit 'Log in', class: 'btn btn-primary' %>
    <%= link_to 'Sign up', new_user_registration_path %>
  </div>
<% end %>