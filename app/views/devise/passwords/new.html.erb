<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), html: { method: :post, role: 'form', class: 'well' }) do |f| %>
  <%= render 'layouts/error_messages', object: resource %>
  <legend>Forgot your password?</legend>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Send me reset password instructions', class: 'btn btn-default' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>